<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShiftEx.Config">
    <ContentPage.Content>
        <StackLayout>
            <TableView>
                <TableView.Root>
                    <TableSection Title="Envia Email">
                        <SwitchCell Text="Enviar Email" x:Name="enviar" />
                        <ViewCell>
                            <StackLayout>
                                <Entry Placeholder="Entre com seu nome" x:Name="txtNome" BindingContext="{x:Reference Name=enviar}" IsVisible="{Binding On}" />
                            </StackLayout>
                        </ViewCell>
                    </TableSection>
                </TableView.Root>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>